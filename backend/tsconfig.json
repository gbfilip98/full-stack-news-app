{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",

    /* Module System */
    "module": "es2020",
    "moduleResolution": "bundler",
    "rootDir": "./src",

    /* Emit Settings */
    "outDir": "./dist",

    /* Interop and Compatibility */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,

    /* Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },

  /* ts-node Runtime Settings */
  "ts-node": {
    "esm": true
  },

  /* Files to Include */
  "include": ["src", "src/tests/**/*.ts"],
  "exclude": ["dist"]
}
